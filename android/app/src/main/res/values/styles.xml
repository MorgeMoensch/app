<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#000000</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#191919</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="splashLogo">@drawable/launch_screen_logo</item>
        <item name="android:navigationBarColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="backgroundColor">#191919</item>
        <item name="splashLogo">@drawable/launch_screen_logo_white</item>
        <item name="android:navigationBarColor">#191919</item>
    </style>

</resources>
